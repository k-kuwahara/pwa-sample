<color-palette>
  <h2>Riot Color Palette</h2>
  <div
    each={ c in colors }
    data-color={ c }
    style={ `background: ${c};` }
    class={ c === props.value && selected}
    onclick={ props.handleClick }
  ></div>
  <p>Click the colorðŸ‘†</p>

  <script>
    export default {
